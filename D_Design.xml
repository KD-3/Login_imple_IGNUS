<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDiv"
        tools:context=".MainActivity">

    <TextView
            android:text="Email"
            android:id="@+id/textView7" android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:layout_alignParentStart="true" android:layout_marginStart="29dp"
            android:layout_alignParentTop="true" android:layout_marginTop="220dp" android:textSize="18sp"
            android:textColor="#010101" android:fontFamily="sans-serif"/>
    <TextView
            android:text="Password"
            android:id="@+id/textView6" android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:layout_alignParentStart="true" android:layout_marginStart="22dp"
            android:layout_alignParentTop="true" android:layout_marginTop="343dp" android:textSize="18sp"
            android:textColor="#010101" android:fontFamily="sans-serif"/>
    <TextView
            android:text="Confirm Password"
            android:id="@+id/textView5" android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:layout_alignParentStart="true" android:layout_marginStart="27dp"
            android:layout_alignParentTop="true" android:layout_marginTop="452dp" android:textSize="18sp"
            android:textColor="#010101" android:fontFamily="sans-serif"/>
    <EditText
            android:layout_width="359dp"
            android:layout_height="67dp"
            android:inputType="textPersonName"
            android:hint="    •••••••"
            android:ems="10"
            android:background="@drawable/rounded_corner"
            android:layout_alignParentTop="true" android:id="@+id/editText4"
            android:layout_marginTop="369dp" android:textSize="36sp" android:layout_alignStart="@+id/textView7"
            android:layout_marginStart="-5dp"/>


    <EditText
            android:layout_width="359dp"
            android:layout_height="63dp"
            android:inputType="textPersonName"
            android:hint="   ••••••••"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:layout_alignParentTop="true" android:id="@+id/editText3"
            android:layout_marginTop="479dp" android:textSize="36sp" android:layout_alignStart="@+id/editText4"/>
    <EditText
            android:layout_width="360dp"
            android:layout_height="63dp"
            android:inputType="textPersonName"
            android:hint="   johndoe@mail.com"
            android:ems="10"
            android:background="@drawable/rounded_corner"
            android:layout_alignParentTop="true" android:id="@+id/editText2"
            android:layout_marginTop="252dp" android:textSize="24sp" android:layout_alignStart="@+id/editText"
            android:layout_marginStart="0dp"/>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/colorDiv1"
            app:cardBackgroundColor="@color/colorDiv1"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp">
        <TextView
                android:text="Sign Up"
                android:layout_width="405dp"
                android:layout_height="182dp" android:layout_alignParentEnd="true"

                android:layout_alignParentTop="true" android:layout_marginEnd="0dp" android:id="@+id/textView"
                android:textColor="@color/colorWhite" android:layout_marginTop="4dp" android:textSize="32sp"
                android:fontFamily="sans-serif" android:layout_alignStart="@+id/null"
                android:textAlignment="center"/>
    </android.support.v7.widget.CardView>
    <EditText
            android:layout_width="360dp"
            android:layout_height="64dp"
            android:inputType="textPersonName"

            android:background="@drawable/rounded_corner"
            android:hint="    John Doe"
            android:ems="10"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:id="@+id/editText"
            android:layout_marginTop="133dp" android:singleLine="true"
            android:textSize="24sp" android:textColor="@color/colorPrimary"/>
    <TextView
            android:text="Full Name"
            android:id="@+id/textView4" android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:layout_alignParentStart="true" android:layout_marginStart="37dp"
            android:layout_alignParentTop="true" android:layout_marginTop="99dp" android:textSize="18sp"
            android:textColor="#010101" android:fontFamily="sans-serif"/>
    <android.support.v7.widget.CardView
            android:layout_width="354dp"
            app:cardBackgroundColor="@color/colorDiv1"
            android:layout_height="76dp" android:layout_toEndOf="@+id/textView5"
            android:drawables="@mipmap/arrowForW"
            android:layout_alignParentBottom="true" android:layout_marginBottom="134dp"
            android:layout_marginStart="-152dp"/>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="84dp"
            app:cardBackgroundColor="@color/colorDiv3"
            android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp" android:layout_alignParentStart="true">
        <TextView
                android:text="                                                                                        Sign in as @johndoe"
                android:layout_width="426dp"
                android:layout_height="match_parent" android:id="@+id/textView10" android:textSize="24sp"
                android:fontFamily="sans-serif" android:textAlignment="center"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
